{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gmake from desktop",
            "type": "shell",
            "command": "make.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build hello world",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "-o",
                "helloworld",
                "main.cpp",
                "LeetCode.cpp",
                "LintCode.cpp"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }

        },
        {
            "type": "shell",
            "label": "g++.exe build active file from desktop",
            "command": "C:\\LLVM\\bin\\g++.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:\\LLVM\\bin"
            }
        }
    ]
}